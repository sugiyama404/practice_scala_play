# Routes
# This file defines all application routes (Higher priority routes first)
# https://www.playframework.com/documentation/latest/ScalaRouting
# ~~~~

# An example controller showing a sample home page
GET     /                           controllers.HomeController.index()
# hello api
GET     /hello                      controllers.HelloController.hello()
+nocsrf
POST    /hello                      controllers.HelloController.helloJson()
# todos api
GET /api/todos           controllers.TodoController.listTodos()
GET /api/todos/:id       controllers.TodoController.getTodo(id: Long)
+nocsrf
POST /api/todos          controllers.TodoController.createTodo()
PUT /api/todos/:id       controllers.TodoController.updateTodo(id: Long)
DELETE /api/todos/:id    controllers.TodoController.deleteTodo(id: Long)

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)
